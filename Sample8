#include <iostream>
#include <math.h>
using namespace std;
int main ()
{
    float p, r, t, ca,ci;
    cout <<"Enter Principle, Rate and Time: \n";
    cin>>p>>r>>t;
    ca=p*pow((1+r/100),t);
    cout<<"\nCompound amount = "<< ca;
    //ci=p*pow((1+r/100),t)-p;
    cout<<"\nCompound interest = "<< ca-p;
    return 0;
}
