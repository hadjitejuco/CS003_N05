//create user defined data types
//void, int, float, double, char
#include <iostream>
//user defined data type
typedef int integer;
typedef float real;

using namespace std;
int main(){
    integer a=1;
    real b = 12.12;
    cout << a << endl;
    cout << b << endl;
    system ("pause>0");
}
