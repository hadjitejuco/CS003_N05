//scope resolution operator  (::)
#include <iostream>
#include <string.h>
int n = 1;      //global var
using namespace std;
int main(){
    int n=2;        //local var 
    {
        int n=3;        //local var 
        {
            int n=4;        //local var 
            cout << "Inner " << n << endl;
            cout << "Outer " << ::n << endl;
        }
        cout << "Inner " << n << endl;
        cout << "Outer " << ::n << endl;
    }
    cout << "Inner " << n << endl;
    cout << "Outer " << ::n << endl;
    system ("pause>0");
}
