
//find the area of a circle.
//area = 3.1415 r^2 
#include <iostream>
#define pi 3.14159 
using namespace std;
int main(){
    float area, r;
    //float pi = 3.14159;
    cout << "Enter radius: ";
    cin >> r;
    //area = 3.14159 * r * r;   
    
    //regular formula
    area = pi * r * r;
    
    //use of function pow()
    area = pi*pow(r,2);

    cout << "The area is " << area;
    return 0;
}
